<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <!-- Include Bootstrap CSS and any other necessary styles/scripts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2>Product Management</h2>
        <!-- Add Product Form -->
        <div class="position-absolute top-0 end-0 mt-2">
            <a href="/admin/auth/signout" class="btn btn-outline-dark">
                ME DECONNECTER
            </a>
        </div>
        <form action="/add-product" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" id="price" name="price" required>
            </div>
            <!-- Add more fields as needed -->
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>

        <hr>

        <!-- Product List -->
        <ul class="list-group">
            <% products.forEach(product => { %>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <span><%= product.title %></span>
                        <div>
                            <a href="/edit-product/<%= product._id %>" class="btn btn-sm btn-info mr-2">Edit</a>
                            <a href="/delete-product/<%= product._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Include Bootstrap JS and any other necessary scripts -->
</body>
</html>